<PropertyList>

<!-- v22 Osprey -->
	<gauge>
		<condition>
			<greater-than>
				<property>/sim/model/v22/inputtilt</property>
				<value>-11</value>			
			</greater-than>
		</condition>
		<name>Input rotor tilt</name>
		<x>-222</x>
		<y>-220</y>
		<width>12</width>
		<height>120</height>
		<option>left</option>
		<option>vertical</option>
		<major-divisions>30</major-divisions>
		<minor-divisions>10</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<tick-bottom>true</tick-bottom>
		<tick-top>true</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>false</cap-left>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>/sim/model/v22/inputtilt</property>
			<max>90.0</max>
			<min>-10.0</min>
		</input>
	</gauge>

	<gauge>
		<condition>
			<greater-than>
				<property>/sim/model/v22/tilt</property>
				<value>-11</value>			
			</greater-than>
		</condition>
		<name>Rotor tilt</name>
		<x>-209</x>
		<y>-220</y>
		<width>15</width>
		<height>120</height>
		<option>right</option>
		<option>vertical</option>
		<option>notext</option>
		<major-divisions>30</major-divisions>
		<minor-divisions>10</minor-divisions>
		<marker-offset>0.0</marker-offset>
		<tick-bottom>false</tick-bottom>
		<tick-top>false</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>false</cap-left>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<input>
			<property>/sim/model/v22/tilt</property>
			<max>90.0</max>
			<min>-10.0</min>
		</input>
	</gauge>


