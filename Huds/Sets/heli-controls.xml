<!-- Engine Mixture -->
	<label>
		<name>Engine Mixture Label</name>
		<x>195</x>
		<y>-175</y>
		<width>1</width>
		<height>1</height>
		<format>Mixture</format>
		<halign>left</halign>
		<condition>
			<or>
				<and>
               <not-equals>
					   <property>/controls/engines/engine/mixture</property>
					   <value>1</value>
                </not-equals>
               <not-equals>
					   <property>/controls/engines/engine/mixture</property>
					   <value>0</value>
                </not-equals>
            </and>
            <and>
			      <not-equals>
					   <property>/controls/engines/engine[1]/mixture</property>
					   <value>1</value>
				   </not-equals>
			      <not-equals>
					   <property>/controls/engines/engine[1]/mixture</property>
					   <value>0</value>
				   </not-equals>
            </and>
			</or>
		</condition>
	</label>
	<label>
		<name>Engine Mixture 1</name>
		<x>257</x>
		<y>-175</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>/controls/engines/engine/mixture</property>
			<factor>100</factor>
			<damp>0.0</damp>
		</input>
		<format>%3.0f</format>
		<halign>right</halign>
		<condition>
         <and>
			   <not-equals>
				   <property>/controls/engines/engine/mixture</property>
				   <value>1</value>
			   </not-equals>
			   <not-equals>
				   <property>/controls/engines/engine/mixture</property>
				   <value>0</value>
			   </not-equals>
         </and>
		</condition>
	</label>
	<label>
