<PropertyList>
	<tape>
		<name>Airspeed nm</name>
		<x>353</x>
		<y>-220</y>
		<width>28</width>
		<height>150</height>
		<option>right</option>
		<option>vertical</option>
		<major-divisions>10</major-divisions>
		<minor-divisions>5</minor-divisions>
		<display-span>50.0</display-span>
		<tick-bottom>true</tick-bottom>
		<tick-top>true</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>false</cap-right>
		<cap-left>true</cap-left>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<tick-type>line</tick-type>
		<tick-length>variable</tick-length>
		<input>
			<property>/velocities/airspeed-kt</property>
			<min>0.0</min>
		</input>
	</tape>

	<label>
		<name>km/h _km/h_</name>
		<x>361</x>
		<y>-64</y>
		<width>1</width>
		<height>1</height>
		<format>km/h</format>
		<halign>left</halign>
	</label>
	<label>
		<name>km/h</name>
		<x>381.5</x>
		<y>-57</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>/velocities/airspeed-kt</property>
			<factor>1.852</factor>
			<damp>0.0</damp>
		</input>
		<format>%5.0f</format>
		<halign>right</halign>
	</label>

	<tape>
		<name>RadioAltimeter</name>
		<x>293</x>
		<y>-220</y>
		<width>25</width>
		<height>150</height>
		<option>left</option>
		<option>vertical</option>
		<major-divisions>25</major-divisions>
		<minor-divisions>5</minor-divisions>
		<display-span>100.0</display-span>
		<tick-bottom>true</tick-bottom>
		<tick-top>true</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>true</cap-right>
		<cap-left>false</cap-left>
		<marker-offset>0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<tick-type>line</tick-type>
		<tick-length>variable</tick-length>
		<input>
			<property>/position/altitude-agl-ft</property>
			<min>0.0</min>
		</input>
		<condition>
			<less-than>
				<property>/position/altitude-agl-ft</property>
				<value>1000000</value>
			</less-than>
		</condition>
	</tape>

	<tape>
		<name>Vertical speed</name>
		<x>-260</x>
		<y>-220</y>
		<width>20</width>
		<height>120</height>
		<option>left</option>
		<option>vertical</option>
		<major-divisions>1</major-divisions>
		<minor-divisions>0</minor-divisions>
		<display-span>10</display-span>
		<tick-bottom>true</tick-bottom>
		<tick-top>true</tick-top>
		<tick-right>false</tick-right>
		<tick-left>false</tick-left>
		<cap-bottom>false</cap-bottom>
		<cap-top>false</cap-top>
		<cap-right>true</cap-right>
		<cap-left>false</cap-left>
		<marker-offset>0.0</marker-offset>
		<enable-pointer>true</enable-pointer>
		<pointer-type>fixed</pointer-type>
		<tick-type>line</tick-type>
		<tick-length>variable</tick-length>
		<input>
			<property>/velocities/vertical-speed-fps</property>
		</input>
	</tape>

