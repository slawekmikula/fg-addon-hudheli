<!-- Engine Condition -->
	<label>
		<name>Engine Condition Label</name>
		<x>195</x>
		<y>-193</y>
		<width>1</width>
		<height>1</height>
		<format>Condition</format>
		<halign>left</halign>
		<condition>
         <and>
			   <or>
				   <less-than>
					   <property>/controls/engines/engine/condition</property>
					   <value>1</value>
				   </less-than>
			      <less-than>
					   <property>/controls/engines/engine[1]/condition</property>
					   <value>0</value>
				   </less-than>
			   </or>
			   <or>
				   <less-than>
					   <property>/controls/engines/engine/condition</property>
					   <value>1</value>
				   </less-than>
			      <less-than>
					   <property>/controls/engines/engine[1]/condition</property>
					   <value>0</value>
				   </less-than>
			   </or>
         </and>
		</condition>
	</label>
	<label>
		<name>Engine Condition 1</name>
		<x>257</x>
		<y>-193</y>
		<width>1</width>
		<height>1</height>
		<input>
			<property>/controls/engines/engine/condition</property>
			<factor>100</factor>
			<damp>0.0</damp>
		</input>
		<format>%3.0f</format>
		<halign>right</halign>
		<condition>
			<less-than>
				<property>/controls/engines/engine/condition</property>
				<value>1</value>
			</less-than>
		</condition>
	</label>
	<label>
		<name>Engine Condition 2</name>
