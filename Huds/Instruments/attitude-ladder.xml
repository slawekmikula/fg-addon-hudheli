<?xml version="1.0"?>

<PropertyList>

	<ladder>
		<name>Attitude indicator</name>
		<type>pitch</type>
		<x>0</x>
		<y>0</y>
		<width>70</width>
		<height>70</height>
		<roll-input>
			<property>/orientation/roll-deg</property>
		</roll-input>
		<pitch-input>
			<property>/orientation/pitch-deg</property>
		</pitch-input>
		<compression-factor>1</compression-factor>
		<display-span>90</display-span>
		<divisions>10.0</divisions>
		<screen-hole>0</screen-hole>
		<lbl-pos>0</lbl-pos>
		<glide-slope>0.0</glide-slope>
		<option>notext</option>
		<enable-fuselage-ref-line>false</enable-fuselage-ref-line>
		<enable-target-spot>false</enable-target-spot>
		<enable-velocity-vector>false</enable-velocity-vector>
		<enable-drift-marker>true</enable-drift-marker>
		<enable-alpha-bracket>false</enable-alpha-bracket>
		<enable-energy-marker>false</enable-energy-marker>
		<enable-climb-dive-marker>true</enable-climb-dive-marker>
		<enable-glide-slope-marker>false</enable-glide-slope-marker>
		<enable-energy-worm>false</enable-energy-worm>
		<enable-waypoint-marker>false</enable-waypoint-marker>
		<enable-zenith>true</enable-zenith>
		<enable-nadir>false</enable-nadir>
		<enable-hat>true</enable-hat>
	</ladder>
<!--
    glide-slope
    enable-energy-marker
    enable-waypoint-marker
-->

</PropertyList>
